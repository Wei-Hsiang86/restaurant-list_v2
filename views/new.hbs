{{! create restaurant form }}
<div class="containerForNew">
  <div class="card my-5 w-75">
    <form action="/restaurants" method="POST">

      {{! 標頭 }}
      <div class="card-header">
        新增餐廳
      </div>

      {{! card-body }}
      <div class="card-body">

        {{! 餐廳名稱 }}
        <div class="row mb-3">
          <label for="name" class="col-sm-4 col-form-label">餐廳名稱</label>
          <div class="col-sm-8">
            <input
              name="name"
              type="text"
              class="form-control"
              id="name"
              value=""
              required
            />
          </div>
        </div>

        {{! 餐廳英文名稱 }}
        <div class="row mb-3">
          <label
            for="name_en"
            class="col-sm-4 col-form-label"
          >餐廳英文名稱（選填）</label>
          <div class="col-sm-8">
            <input
              name="name_en"
              type="text"
              class="form-control"
              id="name_en"
              value=""
            />
          </div>
        </div>

        {{! 餐廳類別 }}
        <div class="row mb-3">
          <label for="category" class="col-sm-4 col-form-label">餐廳類別</label>
          <div class="col-sm-8">
            <input
              name="category"
              type="text"
              class="form-control"
              id="category"
              value=""
              required
            />
          </div>
        </div>

        {{! 餐廳圖片 }}
        <div class="row mb-3">
          <label
            for="image"
            class="col-sm-4 col-form-label"
          >餐廳圖片（選填）</label>
          <div class="col-sm-8">
            <input
              name="image"
              type="url"
              class="form-control"
              id="image"
              value=""
              placeholder="請輸入圖片網址"
            />
          </div>
        </div>

        {{! 地址 }}
        <div class="row mb-3">
          <label for="location" class="col-sm-4 col-form-label">餐廳地址</label>
          <div class="col-sm-8">
            <input
              name="location"
              type="text"
              class="form-control"
              id="location"
              value=""
              required
            />
          </div>
        </div>

        {{! 電話 }}
        <div class="row mb-3">
          <label
            for="phone"
            class="col-sm-4 col-form-label"
          >餐廳電話（選填）</label>
          <div class="col-sm-8">
            <input
              name="phone"
              type="text"
              class="form-control"
              id="phone"
              value=""
            />
          </div>
        </div>

        {{! Google Map }}
        <div class="row mb-3">
          <label for="google_map" class="col-sm-4 col-form-label">Google Map
            連結</label>
          <div class="col-sm-8">
            <input
              name="google_map"
              type="url"
              class="form-control"
              id="google_map"
              value=""
              placeholder="請輸入Google Map 連結"
              required
            />
          </div>
        </div>

        {{! 餐廳評分 }}
        <div class="row mb-3">
          <label for="rating" class="col-sm-4 col-form-label">餐廳評分</label>
          <div class="col-sm-8">
            <input
              name="rating"
              type="number"
              min="1"
              max="5"
              step="0.1"
              class="form-control"
              id="rating"
              value=""
              placeholder="輸入評分 1.0 ~ 5.0，例：3.5"
              required
            />
          </div>
        </div>

        {{! 敘述 }}
        <div class="row mb-3">
          <label for="description" class="col-sm-4 col-form-label">敘述</label>
          <div class="col-sm-8">
            <textarea
              name="description"
              rows="3"
              class="form-control"
              id="description"
              value=""
              placeholder="請簡單寫下對於這間餐廳的感想，或是想前往用餐的理由"
              required
            ></textarea>
          </div>
        </div>

      </div>
      {{! card-body }}

      <div class="card-footer text-muted d-flex justify-content-end">

        <a href="/restaurants">
          <button type="button" class="btn btn-secondary">
            <i
              class="fa-solid fa-angles-left"
              style="margin-right: 8px;"
            ></i>返回
          </button>
        </a>

        <button type="submit" class="btn btn-success ms-2">
          <i class="fa-solid fa-utensils" style="margin-right: 8px;"></i>新增
        </button>
      </div>

    </form>
  </div>
</div>